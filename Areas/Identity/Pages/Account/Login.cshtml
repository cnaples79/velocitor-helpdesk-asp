@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - velocitor_helpdesk_asp</title>
        <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="min-h-screen w-full flex bg-velblue items-center justify-center">
            <form id="account" method="post" class="bg-white p-4 rounded">
                <h2 class="text-lg font-semibold">Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-red-600"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-red-600"></span>
                </div>
                <div class="flex items-center mb-4">
                    <label asp-for="Input.RememberMe" class="flex items-center">
                        <input class="form-checkbox h-4 w-4 text-blue-600" asp-for="Input.RememberMe" />
                        <span class="ml-2 text-sm text-gray-600">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Sign In</button>
                </div>
                <div class="space-y-2 pt-4">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-600 hover:text-blue-700">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-600 hover:text-blue-700">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-blue-600 hover:text-blue-700">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
