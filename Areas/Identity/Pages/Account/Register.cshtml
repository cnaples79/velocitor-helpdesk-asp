@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - velocitor_helpdesk_asp</title>
        <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="flex flex-wrap">
            <div class="w-full md:w-1/3 px-4">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
                    <h2 class="text-lg font-semibold">Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>
                    <div class="mb-3">
                        <input asp-for="Input.Email" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-red-600"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Input.Password" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-red-600"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-600"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Register</button>
                </form>
            </div>
        </div>
    </body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
